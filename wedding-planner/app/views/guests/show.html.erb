<div id='container'  class='center-align'>
  <h1>Hello <%= @guest[:name] %>!</h1>
</div>

  <div class="row">
      <div class="col s10 offset-m1">
      <div class='card' style='padding:20px'>
        Couple Name: <%= @wedding[:couple_name] %><br>
        Wedding Date: <%= @wedding[:wedding_date].strftime("%m/%d/%Y") %><br>
        <!-- Your Email address: <%= @guest[:email] %> <br> <%= @guest[:rsvp] %> -->
        <!-- ID: <%= @guest[:wedding_id] %><br> -->
        RSVP status:
        <% if @guest[:rsvp] == true %>
          <i class="tiny material-icons">done</i>
          <% elsif @guest[:rsvp] == false %>
          <i class="tiny material-icons">not_interested</i>
        <% end %><br>

        Wedding Location: <%= @location.address %> <br>
        The current weather in <%= @zip %> is <%= @response["main"]["temp"].to_f.ceil %> &#8457;
        with <%= @response["weather"][0]["description"] %>
        <img src="http://openweathermap.org/img/w/<%= @response["weather"][0]["icon"] %>.png">
        <br>
        <button><a href="/guests/<%=@guest[:id]%>/edit">Edit RSVP</a></button>

      </div><!--end col s6 -->
    </div> <!--end card class-->
  </div> <!--end row -->
